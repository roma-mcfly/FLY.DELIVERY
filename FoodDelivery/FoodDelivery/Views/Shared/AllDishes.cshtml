@model Dish

<div class="card-container">
    <div class="card" style="width:270px">
        <img class="rest-img" src="@Model.img" alt="@Model.name" style="width:100%">
        <h4>@Model.name</h4>
        <div class="rest-desc">
            <p><span-1>—</span-1> @Model.shortDesc</p>
            <p><span-1>—</span-1> @Model.weight гр.</p>
            <p style="font-size: 20px; color: red; text-align: center;"><span-2>—</span-2> @Model.price руб. </p>
        </div>
        <div class="rest-card-btn">
            <button class="main-btn" type="button">
                <a class="main-btn" type="button" style="font-size: 16px;"asp-controller="DeliveryCard" asp-action="AddToCard" asp-route-id="@Model.id">Добавить в корзину</a>
            </button>
        </div>
    </div>
</div>
