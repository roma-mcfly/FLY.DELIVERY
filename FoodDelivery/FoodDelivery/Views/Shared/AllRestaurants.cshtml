@model Restaurant

<div class="card-container">
    <div class="card" style="width:270px">
        <img class="rest-img" src="@Model.img" alt="@Model.name" style="width:100%">
        <h4>@Model.name</h4>
        <div class="rest-desc">
            <p><span-1>—</span-1> @Model.shortDesc</p>
            <p><span-1>—</span-1> @Model.address</p>
            <p><span-2>—</span-2> @Model.workingTime</p>
        </div>
        <div class="rest-card-btn">
            <button class="main-btn" type="button">
                <a class="main-btn" type="button" asp-controller="Dishes" asp-action="DishesList" asp-route-restName="@Model.name">Подробнее</a>
            </button>
        </div>
    </div>
</div>
